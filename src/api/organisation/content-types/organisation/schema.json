{
  "kind": "collectionType",
  "collectionName": "organisations",
  "info": {
    "singularName": "organisation",
    "pluralName": "organisations",
    "displayName": "Organisations",
    "description": "Groups that manage or participate in garden life"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "content-manager": {
      "visible": true
    },
    "content-type-builder": {
      "visible": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "external_website_url": {
      "type": "string",
      "required": false
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "required": false
    },
    "manages_places": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::place.place",
      "mappedBy": "managing_organisation"
    },
    "summary": {
      "type": "text"
    },
    "social_media": {
      "type": "component",
      "component": "organisation.social-platforms",
      "repeatable": false
    }
  }
}
