{
  "kind": "collectionType",
  "collectionName": "petitions",
  "info": {
    "singularName": "petition",
    "pluralName": "petitions",
    "displayName": "Petition"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "status": {
      "type": "enumeration",
      "default": "draft",
      "enum": [
        "draft",
        "published",
        "closed",
        "archived"
      ]
    },
    "targetCount": {
      "type": "integer"
    },
    "signaturesCount": {
      "type": "integer",
      "default": 0
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag"
    },
    "createdByUser": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "target": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::target.target"
    },
    "end_date": {
      "type": "date"
    },
    "demand": {
      "type": "blocks"
    },
    "signatures": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::signature.signature",
      "mappedBy": "petition"
    },
    "reason": {
      "type": "blocks"
    },
    "ward": {
      "type": "string"
    }
  }
}
