{
  "kind": "collectionType",
  "collectionName": "places",
  "info": {
    "singularName": "place",
    "pluralName": "places",
    "displayName": "Places",
    "description": "Physical locations in the Community Garden"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "content-manager": {
      "visible": true
    },
    "content-type-builder": {
      "visible": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false
    },
    "calendar_enabled": {
      "type": "boolean",
      "default": false
    },
    "managing_organisation": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::organisation.organisation",
      "inversedBy": "manages_places"
    },
    "summary": {
      "type": "text"
    },
    "address": {
      "type": "component",
      "component": "place.address",
      "repeatable": false
    },
    "events": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::event.event",
      "mappedBy": "location"
    }
  }
}
